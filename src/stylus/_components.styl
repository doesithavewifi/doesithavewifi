/* Data Element */

.data-element {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  
  > span {
    
  }
  
  &[data-popup-trigger] {
    position: relative;
    
    &:hover > .popup-body {
      opacity: 1;
      z-index 20;
    }
  }
  
  .popup-body {
    padding: 1em;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color $black
    color $white
    opacity: 0;
    border-radius 10px
    box-shadow 0px 0px 24px 2px rgba(176,176,176,1)
    z-index -1;
    transition: 0.3s;
  }
}

/* Hero */

$heroHeight = 300px;

.hero {
  position: relative;
  width: 100vw;
  height: $heroHeight;

  &:before {
    content: "";
    background: rgba(0,0,0,0.5);
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
  }

  > .content {
    absoluteCenterer()
    z-index: 1;

    > .title {
      color: white;
      font-family: Open Sans;
      text-align: center;
      margin-bottom: 10px;
      font-size: 3.2rem;
      font-weight: bold;
    }
    > .address {
      color: white;
      font-size: 1.8rem;
      text-align: center;
    }
    
    > .editor-rating {
      text-align: center;
      color: white;
      font-size: 28px;
      margin-bottom: 15px;
      .icon-full-star {
        padding: 2px;
      }
    }
  }
}

/* Star Maker */

i {
  &.icon-empty-star:before {
    ion-icon("ios-star-outline");
  }
  
  &.icon-half-star:before {
    ion-icon("ios-star-half");
  }
  
  &.icon-full-star:before {
    ion-icon("ios-star");
  }
}

/* Section Header */

.section-header {
  background: $blue;
  font-family: Montserrat;
  padding: 20px 0;
  font-weight: bold;
  color: white;
  font-size: 2rem;
  text-align: center;
  position: relative;
  text-transform: uppercase;
}



