$popupBase
  display block
  position relative
  height 100%
  width 100%

.popup-wrapper
  @extend $popupBase
  .popup-target
    @extend $popupBase
    display flex
    align-items center
    justify-content center
    cursor pointer
    border 1px solid #f00
    
    & + .popup-body
      @extend $popupBase
      display none
      padding 1em
      background-color $black
      color $white
      border-radius 10px
      box-shadow 0px 0px 24px 2px rgba(176,176,176,1)
      z-index 2
      
    &:hover + .popup-body
      display block
      


