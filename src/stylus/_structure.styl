.header {
  background: #62B2FC;
  display: flex;
  justify-content: space-between;
  padding: 20px 20px 25px;
}

.logo-wrapper {
  display: flex;
  align-items: center;
}

.logo {
  background url('/img/logo.png')
  height: 37px;
  width: 331px;
  position relative
  text-indent: -9999px;
  
  &:before {
    ion-icon("alert")
  }
} 

.dropdown {
  color: white;
  font-size: 18px;
  margin-left: 20px;
  padding: 5px 10px;
  border-bottom: 2px white solid;
}

.main-nav {
  display: flex;
  align-items: center;
  
  ul {
    display: flex;
  }
  
  li {
    color: white;
    font-size: 18px;
    margin-left: 25px;
  }
}

.hero {
  position: relative;

  img {
    width: 100%;
  }
  &:before {
    content: "";
    background: rgba(0,0,0,0.1);
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
  }
  
  .title {
    color: white;
    position: absolute;
    font-size: 32px;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
}