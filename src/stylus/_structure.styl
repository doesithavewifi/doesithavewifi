/* Structure Styles to extend */

main {
  margin: 0 auto 0;
  max-width: 1200px;
  padding: 0 20px 0;
  
  > section {
    clearfix();
    margin-bottom: 20px;
  }
}

/* Header Styles */

.header {
  background: #62B2FC;
  display: flex;
  justify-content: space-between;
  padding: 20px 20px 25px;
}

.logo-wrapper {
  display: flex;
  align-items: center;
}

.logo {
  background url('/img/logo.png')
  height: 37px;
  width: 331px;
  position relative
  text-indent: -9999px;
} 

.dropdown {
  color: white;
  font-weight: bold;
  font-size: 2.4rem;
  margin-left: 20px;
  padding: 5px 10px;
  border-bottom: 3px white solid;
}

.main-nav {
  display: flex;
  align-items: center;
  
  ul {
    display: flex;
  }
  
  li {
    color: white;
    font-size: 1.8rem;
    font-weight: bold;
    margin-left: 25px;
  }
}

/* Home listings */

.item-list {
  @extend main;
}

$item {
  color: $grey-darker;
  display: flex;
  justify-content: space-between;
  text-decoration: none;
}

.item {
  @extend $item;
  height: 5rem;
  &:hover {
    background: $grey-light;
  }
}

.item > div {
  flex-basis: 0;
  flex-grow: 1;
  height: 100%;
  text-align: center;
}

.item-header-wrapper {
  background: $blue;
}

.item-header {
  @extend $item;
  max-width: 1200px;
  padding: 0 20px 0;
  margin: 0 auto 0;
  line-height: 2rem;
  > div {
    flex-basis: 0;
    flex-grow: 1;
    color: white;
    line-height: 2rem;
    font-weight bold;
    font-size: 1.8rem;
    text-align: center;
    padding: 2rem 0 ;
  }
}